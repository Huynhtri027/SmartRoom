<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ayushkumar.smartroomsop" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="Create Mode" >
        </activity>
        <activity
            android:name=".ReadTextActivity"
            android:label="Read Mode" >
        </activity>
        <activity
            android:name=".OpenActivity"
            android:label="Open Mode" >
        </activity>
        <activity
            android:name=".util.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".AudioActivity"
            android:label="@string/title_activity_audio" >
        </activity>
        <activity
            android:name=".LoadActivity"
            android:label="@string/title_activity_load"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.smroom" />
                <data android:host="*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateInfoActivity"
            android:label="@string/title_activity_create_info"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ProjectInfoActivity"
            android:label="@string/title_activity_project_info"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
